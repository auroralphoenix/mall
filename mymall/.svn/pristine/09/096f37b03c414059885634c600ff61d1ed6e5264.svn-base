/* CSS Document */
/* 购物车 */
.shopcart{
	height: 630px;
	margin-top: 30px;
	margin-bottom: 30px;
}
.shopcart h3{
	font-size: 24px;
	color: #ff6700;
	text-indent: 20px;
	font-weight: 500;
}
.shopcart table{
	height: 500px;
	width: 1200px;
	text-align: center;
}
.shopcart table thead tr th{
	height: 60px;
	background-color: #f1f1f1;
}
.shopcart .totalPrice{
	height: 60px;
	line-height: 60px;
	background-color: #f1f1f1;
	font-size: 20px;
	margin-top: 20px;
}
.shopcart .totalPrice span{
	margin-right: 150px;
}
.shopcart .totalPrice span:first-of-type{
	margin-left: 100px;
}
.shopcart .totalPrice input{
	margin-left: 10px;
}
.shopcart table button{
	width: 20px;
	height: 20px;
}
.shopcart table input{
	width: 50px;
}
/*蒙版*/
.model{
	width: 100%;
	height:100%;
	background-color:rgba( 0,0,0,.5);
	position: fixed;
	top: 0;
	left: 0;
	display: none;
	/*	扩展*/
/*
	display: flex;
	justify-content:center;
	align-items: center;
*/
}
.model .content{
	width: 400px;
	height: 250px;
	background-color:#EDE8E8;
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	margin: auto;
